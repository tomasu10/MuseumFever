
<%- include("../partials/header") %>


    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Museum</h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/museums" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class= "form-control" type="text" placeholder="Name" id="name" name ="museum[name]">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class= "form-control" type="number" placeholder="Price" id="price" name ="museum[price]" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class= "form-control" type="file" placeholder="Image Url" id="image" name ="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class= "form-control" type="text" placeholder="Description" id="description" name ="museum[description]">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="museum[location]" id="location" placeholder="Location">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/museums">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>