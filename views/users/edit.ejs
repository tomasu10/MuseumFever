<%- include("../partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1 style="text-align: center">Edit <%= user.username %> </h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/users/<%= user._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="firstname">First Name</label>
                <input class="form-control" id="firstname"type="text" name="firstName" value ="<%= user.firstName %> ">
            </div>
            <div class="form-group">
                <label for="lastname">Last Name</label>
                <input class="form-control" id="lastname"type="text" name="lastName" value ="<%= user.lastName %> ">
            </div>
            <div class="form-group">
                <label for="bio">User Bio</label>
                <input class="form-control" id="bio"type="text" name="bio" value ="<%= user.bio %> ">
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class= "form-control" type="file" placeholder="Image Url" id="image" name ="image" accept="image/*">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" id="email"type="email" name="email" value ="<%= user.email %> ">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit User</button>
            </div>
        </form>
        <a href="/museums">Go Back</a>
    </div>
</div>


<%- include("../partials/footer") %>